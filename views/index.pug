doctype html
html 
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
		script.
			let user = {displayName: '#{user.displayName}', username: '#{user.username}', avatarImagePath: '#{user.avatarImagePath}'};
		script(src='/socket.io/socket.io.js')
		script(src='./javascripts/client.js')
		script(src='./javascripts/linkify.min.js')
		script(src='./javascripts/linkify-string.min.js')
		link(rel='stylesheet', href='../styles/style.css')
		link(rel='stylesheet', href='../styles/custom.css')
		title Express View Engine 
	body(class='bg-gray-800 text-gray-200 ')
		div(class='flex flex-row p-6 h-full')
			div(class='flex-grow w-1/2 max-h-48 p-2 rounded bg-gray-900')
				div(class='flex flex-row p-1')
					form(action='/profile/avatar' id='avatar-form' enctype='multipart/form-data' method='post')
						label(for='avatar-input')
							img.image(src=user.avatarImagePath alt='Avatar Image' class='avatar')
						input(id='avatar-input' name='avatar-input' type='file')
					h1(class='pl-4 self-center') #{user.displayName} 
				div(class='flex flex-col p-1 h-10')
					p #{'@' + user.username}
					a(href='/auth/logout' class='btn self-center text-center w-1/2 mt-1 rounded-md bg-gray-800 text-white shadow focus:outline-none focus:ring-2 hover:bg-green-800') Logout
			div(class='flex-grow ml-4 p-2 rounded bg-gray-900')
				div(class='flex flex-col h-full')
					div(id='chatBox' class='flex-grow p-2 w-full overflow-x-auto overflow-y-scroll max-w-64 rounded-lg text-gray-200')
						// = = = = = = = = To be deleted = = = = = = = =
						div(class='msg')
							div(class='avatar-container')
								img.image(src='./images/defaultAvatar.png' alt='Avatar Image' class='avatar')
							div(class='text-container')
