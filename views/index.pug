					div(class='pt-4 flex')
						input(type='text' placeholder='Your message' id='message-box' name='message-box' class='flex-grow pl-2 rounded-md text-gray-800 p-1')
						button(type='button' onclick='sendMessage();' class='rounded-xl ml-1 w-10 h-10 bg-gray-800 text-white shadow focus:outline-none focus:ring-2 bg-gradient-to-r hover:from-blue-800 hover:to-pink-800')
							div(class='w-full h-7 px-1.5 fill-current text-gray-200')
