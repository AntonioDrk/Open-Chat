doctype html
html 
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
		link(rel='stylesheet', href='../styles/style.css')
		link(rel='stylesheet', href='../styles/custom.css')
		title Login
	body(class='bg-gray-800 text-gray-200 ') 
		h1 Login
		form(action='/auth/login' id='signup-form' autocomplete='off' method='POST')
			p(class='flex-row')
				| Username/Email: 
				input(type='text' name='username' placeholder='Your username' required class='flex text-gray-900')
				| Password: 
				input(type='password' name='password' id='password' placeholder='password' required class='flex text-gray-900')
			button(type='submit' form='signup-form' value='Submit' class='bg-purple-900 w-24 h-6')
				p Submit
		br
		h1 #{err}
		br
		a(href='/auth/register' class='btn self-center text-center w-1/2 mt-1 rounded-md bg-green-800 text-white shadow focus:outline-none focus:ring-2 ') Sign-Up