doctype html
html 
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
		link(rel='stylesheet', href='../styles/style.css')
		link(rel='stylesheet', href='../styles/custom.css')
		title Sign-up
	body(class='bg-gray-800 text-gray-200 ') 
		h1 Sign-up
		form(action='/auth/register' id='signup-form' autocomplete='off' method='POST')
			label(class='flex-row')
				| Username: 
				input(type='text' name='username' placeholder='Your username' class='flex text-gray-900' required)
				| Email: 
				input(type='email' name='email' id='email' placeholder='Email' class='flex text-gray-900' required)
				| Display Name: 
				input(type='text' name='displayName' placeholder='Name to display' class='flex text-gray-900' required)
				| Password: 
				input(type='password' name='password' id='password' class='flex text-gray-900' required)
			button(type='submit' form='signup-form' value='Submit' class='bg-purple-900 w-24 h-6')
				p Submit
		h1 #{err}